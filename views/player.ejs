<!doctype html>
<html lang="ja">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="/stylesheets/style_forplayer.css"> -->
    <link rel="stylesheet" href="/stylesheets/style_forplayer.css" media="screen and (min-width:481px)">
    <link rel="stylesheet" href="/stylesheets/style_forplayer_phone.css" media="screen and (max-width:480px)">

    <title>Baseball Score</title>
</head>

<body>

    <div class="container">
        <div id="green-field" class="row justify-content-center align-self-center bg-success">
            <div id="brown-field" class="col border border-white m-3">
                <div id="white-field" class="border border-dark rounded m-2">
                    <a href=/login/logout id="logoutBtn" class="btn btn-primary">ログアウト</a>

                    <!-- <div id="order">打順 : 1</div>
                    <div id="name">新村一真 #2</div>
                    <div id="box_count">第四打席</div>
                    <input class="border border-dark rounded" id="result" value="右邪飛"></input> -->
                    <!-- <ul id="boxCountList">
                        <li id="box_count_1">第一打席：&nbsp;&nbsp;<p>左本</p>
                        </li>
                        <li id="box_count_2">第二打席：&nbsp;&nbsp;<p>三振</p>
                        </li>
                        <li id="box_count_3">第三打席：&nbsp;&nbsp;<p>一ゴロ</p>
                        </li>
                    </ul> -->
                    <div id="order_div">打順 :
                        <%- playerInfo[0].orderNo %>

                    </div>

                    <form action="/change" method="post">
                        <div id="name_div">名前：</div>
                        <input id="name" class="border border-dark rounded" name="name" onchange="changeNameFlg()"
                            value="<%- playerInfo[0].playerName %>"></input>
                        <div id="position_div">守備：
                            <data id="position_hidden" value='<%- playerInfo[0].position %>' hidden></data>
                        </div>
                        <select name="position" id="position" onchange="changePositionFlg()">
                        </select>

                        <!-- <input type="hidden" name="_method" value="PUT"> -->
                        <input id="changeNameFlag" type="hidden" name="changeNameFlag" value=0>
                        <input id="changePositionFlag" type="hidden" name="changePositionFlag" value=0>
                        <input id="" type="hidden" name="order" value="<%- playerInfo[0].orderNo %> ">
                        <input id="resultEnterBtn" class="btn btn-warning btn-lg" type="submit" value="変更">
                    </form>
                    <a href="/back" id="back" class="btn btn-primary">戻る</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS  -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="/javascripts/submit.js"></script>
    <script src="/javascripts/basic5.js"></script>
</body>

</html>